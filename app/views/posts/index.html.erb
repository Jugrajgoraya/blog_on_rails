
    <div>
        <%= @posts.each do |post| %> 
        <div class="card mt-4 m-2">
            <div class="card-body ">
                <div class ="row">
                    <a href="<%= post_path(post) %>" class="card-title col nav-link fs-5"><%= post.title  %></a>
                </div>
                <p class="card-text"><%= post.body  %></p>
                <small><%= time_ago_in_words(post.created_at) %> ago</small>
            </div>
        </div>
        <% end %> 
    </div>
